

<%form_for @account,adminaccounts_path do |f|%>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :pwd %><br />
    <%= f.password_field :original_pwd %>
  </p>
   <p>
    <%= f.label :confirmation_pwd %><br />
    <%= f.password_field :original_pwd_confirmation%>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :group %>
    <%= f.collection_select(:group_id,Group.all,:id,:name) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<%end%>