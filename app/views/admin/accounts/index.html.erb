
<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Pwd</th>
    <th>Email</th>
    <th>Group</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h account.name %></td>
    <td><%=h account.pwd %></td>
    <td><%=h account.email %></td>
    <td><%=h account.group.name%></td>
    <td><%= link_to 'Show', adminaccount_path(account) %></td>
    <td><%= link_to 'Edit', edit_adminaccount_path(account) %></td>
    <td><%= link_to 'Destroy', adminaccount_path(account), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_adminaccount_path %>